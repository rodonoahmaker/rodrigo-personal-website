---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

const posts = (await Astro.glob("./blog/*.{md,mdx}")).sort(
  (a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">Hey there ðŸ‘‹</div>
      <div class="text-4xl py-2 font-bold">I'm Rodrigo De Marchi</div>
      <div class="text-3xl py-3 font-semibold">Product Manager</div>
      <div class="py-2">
        <text class="text-lg">
          I'm a product manager working with acquisition and growth at <a class="text-primary" href="https://www.betrybe.com/" style="text-decoration: underline">Trybe</a>, an online programming school. Aside from product, I spend time on personal projects and programming challenges. Check them out below.
          </text
        >
      </div>
      <div class="mt-8">
        <a class="btn btn-outline" href="https://twitter.com/rodonoah" target="_blank"> Let's connect!</a>
        <!-- <a href="https://github.com/manuelernestog/astro-modern-personal-website" target="_blank" class="btn btn-outline ml-5"> Get This template</a> -->
      </div>
    </div>

    <div>
      <div class="text-3xl w-full font-semibold mb-2">Coding challenges</div>
      <div class="py-2">
        <text class="text-lg">
          I'm a big fan of codewars.
          </text> </div>
    </div>

    <div style="margin-bottom: 2.5rem; margin-top: .5rem;">
      <a href="https://www.codewars.com/users/rodonoah/" target="_blank" >
      <img src="https://www.codewars.com/users/rodonoah/badges/large" alt="codewars"> 
      </a>
    </div>

    <div>
      <div class="text-3xl w-full font-semibold mb-2">Projects {"</>"}</div>
    </div>

    <HorizontalCard
      title="Soil humidity sensor"
      img="/soil_moisture_clip_min.gif"
      desc="Soil humidity level sensor using the raspberry pi pico."
      url="#"
      badge="Pi Pico"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Alarm clock"
    img="/alarm_clock_clip.gif"
    desc="First version of an alarm clock using the raspberry pi pico."
    url="#"
    badge="Pi Pico"
  />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Demo Project 3"
    img="/post_img.webp"
    desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
    url="#"
    badge="FOSS"
  />


    <div>
      <div class="text-3xl w-full font-semibold mb-5 mt-10">Latest from blog</div>
    </div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.frontmatter.title}
          img={post.frontmatter.heroImage}
          desc={post.frontmatter.description}
          url={post.url}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }

</BaseLayout>
